[http]
	emptyAuth = true
[push]
	default = simple
	autoSetupRemote = true
[pull]
	rebase = true
[alias]
    a = add
    aa = add -A
    au = add -u
    b = branch
    bm = branch -M main
    c = commit
    ca = commit --amend
    can = commit --amend --no-edit
    cl = clone
    cm = commit -m
	co = checkout
    cob = checkout -b
    l = log
    ll = log -7 --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    pl = pull
    plr = pull --rebase
    pu = push
    pum = push -u origin main
    r = remote
    re = rebase
    rs = restore
    rsuo = remote set-url origin
	s = status
[user]
	name = Rohan Sanjay
	email = rohanpsanjay@gmail.com
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[core]
	ignorecase = true
